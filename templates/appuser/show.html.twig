{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ appuser.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ appuser.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ appuser.roles ? appuser.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ appuser.password }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-light btn-outline-dark me-2" href="{{ path('appuser_index') }}">Retour</a>

            <a class="btn btn-light btn-outline-dark me-2" href="{{ path('appuser_edit', {'id': appuser.id}) }}">Modifier</a>

            {{ include('appuser/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
