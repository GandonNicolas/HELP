{% extends 'base.html.twig' %}

{% block title %}Context index{% endblock %}

{% block body %}
<div class="container">
    <h1>Context index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for context in contexts %}
            <tr>
                <td>{{ context.id }}</td>
                <td>{{ context.label }}</td>
                <td>
                    <a class="btn btn-light btn-outline-dark me-2" href="{{ path('context_show', {'id': context.id}) }}">Voir</a>
                    <a class="btn btn-light btn-outline-dark me-2" href="{{ path('context_edit', {'id': context.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de context trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-light btn-outline-dark me-2" href="{{ path('context_new') }}">Créer nouveau</a>
</div>
{% endblock %}
