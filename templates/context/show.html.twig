{% extends 'base.html.twig' %}

{% block title %}Context{% endblock %}

{% block body %}
<div class="container">
    <h1>Context</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ context.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ context.label }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-outline-dark me-2" href="{{ path('context_index') }}">back to list</a>

        <a class="btn btn-outline-dark me-2" href="{{ path('context_edit', {'id': context.id}) }}">edit</a>

        {{ include('context/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
