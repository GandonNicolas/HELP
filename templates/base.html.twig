<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
</head>

{% block header %}
<header>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">
            HELP
            </a>
            <form class="d-flex flex-row w-50">
                {{ render(controller('App\\Controller\\SearchController::index')) }}            
            </form>
            <div class="block-btn">

                <button type="button" class="btn btn-sm" name="monCompte">
                    <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path
                            d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z" />
                    </svg>
                </button>

                <a href="{{ path('post_add') }}" class="text-decoration-none">
                    <button type="button" class="btn btn-sm" name="add" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                            <path
                                d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </button>
                </a>
                <a href="{{ path('app_logout') }}" class="text-decoration-none">
                    <button type="button" class="btn btn-sm" name="add" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                            <path d="M7.5 1v7h1V1h-1z"/>
                            <path d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z"/>
                        </svg>
                    </button>
                </a>
            </div>
        </div>
    </nav>
</header>
{% endblock %}
<body>
{% block body %}
{% endblock %}
</body>
</html>