{% extends 'base.html.twig' %}

{% block title %}Univers index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Univers index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Label</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for univer in univers %}
                <tr>
                    <td>{{ univer.id }}</td>
                    <td>{{ univer.label }}</td>
                    <td>
                        <a class="btn btn-light btn-outline-dark me-2" href="{{ path('univers_show', {'id': univer.id}) }}">Voir</a>
                        <a class="btn btn-light btn-outline-dark me-2" href="{{ path('univers_edit', {'id': univer.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun Univers trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-light btn-outline-dark me-2" href="{{ path('univers_new') }}">Créer nouveau univer</a>
    </div>
{% endblock %}
