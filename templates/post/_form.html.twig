{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(formPost) }}
        <div class="p-2 container">
            <h2 class="my-3">Ajout d'article</h2>
            <div class="form-group">
                <label for="" class="ml-3">Titre</label>
                    {{ form_widget(formPost.title) }}

                <label for="" class="ml-3">Mots cl√©s</label>   
                    {{ form_widget(formPost.keyword) }}

                <label for="" class="ml-3">Contenu</label>  
                    {{ form_widget(formPost.content) }}
                
                <label for="" class="ml-3">Choisir un context</label>   
                {{ form_widget(formPost.context) }}

                {{ form_widget(formPost.obsoleted_date) }}                  
            </div>

            <div class="text-center">
                <button class="btn btn-dark m-3" type="submit">
                    {% if editMode %} Modifier {% else %} Ajouter {% endif %}
                </button>
                <a class="btn btn-dark m-3" href="{{ path('post') }}">Annuler</a>
            </div>
        </div>
    {{ form_end(formPost) }}

{% endblock %}
